---
import ViewProjectLink from './ViewProjectLink.astro';
const { projectTitle, projectDescription, link } = Astro.props;
---

<section class="bg-zinc-800/80 backdrop-blur-sm rounded-xl p-6 border border-zinc-700/50 hover:border-cyan-400/30 transition-all duration-300 hover:-translate-y-1 shadow-lg hover:shadow-cyan-500/10 flex flex-col h-full">
    <h3 class="text-2xl font-bold mb-3">
        <a
            href={link}
            target="_blank"
            class="hover:text-cyan-300 transition-colors duration-300">{projectTitle}</a
        >
    </h3>
    <p class="text-zinc-300 flex-grow">{projectDescription}</p>
    <div class="mt-4">
        <ViewProjectLink link={link} />
    </div>
</section>